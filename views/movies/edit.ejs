<%- include("../partials/html-head") %>

<link rel="stylesheet" href="/stylesheets/movies/new.css">
  
<%- include("../partials/nav") %>
<main>
  <h1>Edit a Movie</h1>
  <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
    <label>Title:
      <input type="text" name="title" value="<%= movie.title%>">
    </label><br>
    <label>Release Year:
      <input type="text" name="releaseYear" value="<%= movie.releaseYear %>">
    </label><br>
    <label>MPAA Rating
      <select name="mpaaRating">
        <option value="<%= movie.mpaaRating %>"><%= movie.mpaaRating%></option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
      </select>
    </label><br>
    <label>Now Showing:
      <input 
        type="checkbox" 
        name="nowShowing" 
        <%= movie.nowShowing ? "checked" : "" %>
        id="now-showing-checkbox"
      >
    </label><br>
    <button type="submit">Edit Movie</button>
  </form>
</main>

<%- include("../partials/footer") %> 