<%- include("../partials/html-head") %>

<link rel="stylesheet" href="/stylesheets/movies/index.css">
  
<%- include("../partials/nav") %>
<main>
  <h1>Movie List</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Release Year</th>
        <th>Rating</th>
        <th>Cast</th>
        <th>Now Showing</th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <% movies.forEach(m => { %>
        <tr>
          <td><%= m.title %></td>
          <td><%= m.releaseYear %></td>
          <td><%= m.mpaaRating %></td>
          <td><%= m.cast.join(', ') %></td>
          <%# finish the ternary expression to display 'Yes' or 'Nope' %> 
          <td><%= m.nowShowing ? "Yes" : "Nope" %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
<%- include("../partials/footer") %>